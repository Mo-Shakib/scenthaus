{%- style -%}
  #HeroVideoCustom-{{ section.id }} {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.overlay_base_color }};
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      {{ section.settings.overlay_base_color }} 0%,
      transparent 50%,
      rgba(5, 5, 5, 0.4) 100%
    );
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 1rem;
    max-width: 64rem;
    margin: 0 auto;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__subheading {
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__heading {
    font-size: 3rem;
    line-height: 1.1;
    font-weight: 500;
    margin-bottom: 1.5rem;
    color: {{ section.settings.text_color }};
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__text {
    font-size: 0.875rem;
    line-height: 1.7;
    max-width: 32rem;
    margin: 0 auto 2.5rem;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__button {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__button--primary {
    background-color: #ffffff;
    color: #000000;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__button--primary:hover {
    background-color: #e5e5e5;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__button--secondary {
    border: 1px solid #ffffff;
    color: #ffffff;
    background-color: transparent;
  }

  #HeroVideoCustom-{{ section.id }} .hero-video__button--secondary:hover {
    background-color: #ffffff;
    color: #000000;
  }

  @media screen and (min-width: 750px) {
    #HeroVideoCustom-{{ section.id }} .hero-video__heading {
      font-size: 4.5rem;
    }

    #HeroVideoCustom-{{ section.id }} .hero-video__text {
      font-size: 1rem;
    }

    #HeroVideoCustom-{{ section.id }} .hero-video__buttons {
      flex-direction: row;
    }
  }

  @media screen and (min-width: 990px) {
    #HeroVideoCustom-{{ section.id }} .hero-video__heading {
      font-size: 6rem;
    }
  }
{%- endstyle -%}

<header id="HeroVideoCustom-{{ section.id }}">
  <div class="hero-video__media">
    {%- if section.settings.video != blank -%}
      {{-
        section.settings.video
        | video_tag:
          autoplay: true,
          loop: true,
          muted: true,
          controls: false,
          playsinline: true,
          preload: 'metadata',
          class: 'hero-video__video'
      -}}
    {%- endif -%}
    <div class="hero-video__overlay"></div>
  </div>

  <div class="hero-video__content">
    {%- if section.settings.subheading != blank -%}
      <p class="hero-video__subheading">
        {{ section.settings.subheading | escape }}
      </p>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h1 class="hero-video__heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <p class="hero-video__text">
        {{ section.settings.text }}
      </p>
    {%- endif -%}

    <div class="hero-video__buttons">
      {%- if section.settings.button_1_label != blank -%}
        <a
          {% if section.settings.button_1_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_1_link }}"
          {% endif %}
          class="hero-video__button hero-video__button--primary"
        >
          {{ section.settings.button_1_label | escape }}
        </a>
      {%- endif -%}

      {%- if section.settings.button_2_label != blank -%}
        <a
          {% if section.settings.button_2_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_2_link }}"
          {% endif %}
          class="hero-video__button hero-video__button--secondary"
        >
          {{ section.settings.button_2_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Hero Video Custom",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Background video"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The Essence of Distinction"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Beyond Memory"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Body text",
      "default": "Use this hero to highlight your brand story or a signature collection."
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Button 1 label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Button 2 label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_base_color",
      "label": "Overlay base color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Hero Video Custom"
    }
  ]
}
{% endschema %}
